<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane styleClass="border-pane-no-gap" stylesheets="@/css/style-home.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.softeng.group77.pennyplanner.controller.HomeController">
    <left>
        <VBox styleClass="nav-bar" BorderPane.alignment="TOP_LEFT">
            <Label styleClass="nav-title" text="PennyPlanner" />
            <Button onAction="#turntoHome" styleClass="nav-button" text="Home" />
            <Button onAction="#turntoReport" styleClass="nav-button" text="Report &amp; Forecast" />
            <Button prefHeight="35.0" prefWidth="184.0" style="-fx-font-weight: bold;" styleClass="nav-button" text="Track Spend!" />
            <Button onAction="#turntoHistory" styleClass="nav-button" text="History" />
            <Button onAction="#turntoManagement" styleClass="nav-button" text="Management" />
            <Button onAction="#turntoUser" styleClass="nav-button" text="User Profile" />
        </VBox>
    </left>
    <right>
        <SplitPane orientation="VERTICAL" styleClass="right-split">
            <SplitPane fx:id="splitPane" dividerPositions="0.1" layoutX="179.0" layoutY="1.0" orientation="VERTICAL" prefHeight="398.0" prefWidth="418.0">
                <items>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                        <children>
                            <Button layoutX="450.0" layoutY="7.0" mnemonicParsing="false" onAction="#turntoLogin" styleClass="logout-button" text="Log out" />
                            <Label layoutX="14.0" layoutY="11.0" style="-fx-font-weight: bold;" text="Home">
                        <font>
                           <Font size="17.0" />
                        </font></Label>
                        </children>
                    </AnchorPane>

                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="353.0" prefWidth="505.0">
                        <children>
                            <Label fx:id="usernameLabel" layoutX="14.0" layoutY="11.0" prefHeight="37.0" prefWidth="164.0" text="Hello username">
                        <font>
                           <Font size="14.0" />
                        </font></Label>

                            <!-- 卡片容器HBox -->
                            <HBox layoutX="56.0" layoutY="56.0" prefHeight="100.0" prefWidth="481.0" spacing="20.0">
                                <!-- 卡片1: 总余额 -->
                                <VBox prefWidth="150.0" styleClass="card">
                                    <children>
                                        <Label styleClass="card-title" text="Total Balance" />
                                        <Label fx:id="totalBalanceLabel" styleClass="card-amount" text="12,345" />
                                        <HBox spacing="5">
                                            <Label styleClass="positive-change" text="↑" />
                                            <Label styleClass="positive-change" text="2.5%" />
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- 卡片2: 收入 -->
                                <VBox prefWidth="150.0" styleClass="card">
                                    <children>
                                        <Label styleClass="card-title" text="Income" />
                                        <Label fx:id="incomeAmountLabel" styleClass="card-amount" text="5,678" />
                                        <HBox spacing="5">
                                            <Label styleClass="positive-change" text="↑" />
                                            <Label styleClass="positive-change" text="1.8%" />
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- 卡片3: 支出 -->
                                <VBox prefWidth="150.0" styleClass="card">
                                    <children>
                                        <Label styleClass="card-title" text="Expense" />
                                        <Label fx:id="expenseAmountLabel" styleClass="card-amount" text="3,333" />
                                        <HBox spacing="5">
                                            <Label styleClass="negative-change" text="↓" />
                                            <Label styleClass="negative-change" text="0.8%" />
                                        </HBox>
                                    </children>
                                </VBox>
                            </HBox>
                     <StackPane fx:id="expenseTrendChartContainer" layoutX="24.0" layoutY="198.0" prefHeight="210.0" prefWidth="222.0" />
                     <StackPane fx:id="expenseDistributionChartContainer" layoutX="255.0" layoutY="197.0" prefHeight="217.0" prefWidth="308.0" />
<!--                     <HBox layoutX="388.0" layoutY="17.0" prefHeight="25.0" prefWidth="175.0" styleClass="budget-container">-->
                     <Label layoutX="290.0" layoutY="21.0" prefHeight="22.0" prefWidth="111.0" text="Monthly Budget" />
                     <TextField fx:id="budgetField" layoutX="391.0" layoutY="19.0" prefHeight="25.0" prefWidth="118.0" promptText="Monthly Budget" styleClass="modern-input" />
                     <Button fx:id="saveBudgetButton" layoutX="530.0" layoutY="19.0" mnemonicParsing="false" onAction="#saveBudget" styleClass="action-button" text="Save" />
<!--                     </HBox>-->

                        </children>
                    </AnchorPane>
                </items>
            </SplitPane>
        </SplitPane>


    </right>
</BorderPane>
