<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="border-pane-no-gap" stylesheets="@/css/style-Report.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.softeng.group77.pennyplanner.controller.ReportController">
    <left>
        <VBox styleClass="nav-bar" BorderPane.alignment="TOP_LEFT">
            <Label styleClass="nav-title" text="PennyPlanner" />
            <Button styleClass="nav-button" text="Home" onAction="#turntoHome"/>
            <Button styleClass="nav-button" text="Report &amp; Forecast" onAction="#turntoReport"/>
            <Button styleClass="nav-button" text="Settings" />
            <Button styleClass="nav-button" text="History" onAction="#turntoHistory"/>
            <Button styleClass="nav-button" text="Management" onAction="#turntoManagement"/>
            <Button styleClass="nav-button" text="User Profile" onAction="#turntoUser"/>
        </VBox>
    </left>
    <right>
        <SplitPane orientation="VERTICAL" styleClass="right-split">
            <SplitPane dividerPositions="0.1" layoutX="179.0" layoutY="1.0" orientation="VERTICAL" prefHeight="398.0" prefWidth="418.0">
                <items>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                        <children>
                            <Button layoutX="450.0" layoutY="7.0" mnemonicParsing="false" text="Log out" onAction="#turntoLogin"/>
                            <Label layoutX="14.0" layoutY="11.0" text="Report" />
                        </children>
                    </AnchorPane>

                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="353.0" prefWidth="505.0">
                        <children>

                            <!-- 卡片容器HBox -->
                            <HBox layoutX="6.0" layoutY="56.0" prefHeight="100.0" prefWidth="481.0" spacing="20.0">
                                <!-- 卡片1: 总余额 -->
                                <VBox prefWidth="150.0" styleClass="card">
                                    <children>
                                        <Label styleClass="card-title" text="Total Balance" />
                                        <Label styleClass="card-amount" text="12,345" />
                                        <HBox spacing="5">
                                            <Label styleClass="positive-change" text="↑" />
                                            <Label styleClass="positive-change" text="2.5%" />
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- 卡片2: 收入 -->
                                <VBox prefWidth="150.0" styleClass="card">
                                    <children>
                                        <Label styleClass="card-title" text="Income" />
                                        <Label styleClass="card-amount" text="5,678" />
                                        <HBox spacing="5">
                                            <Label styleClass="positive-change" text="↑" />
                                            <Label styleClass="positive-change" text="1.8%" />
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- 卡片3: 支出 -->
                                <VBox prefWidth="150.0" styleClass="card">
                                    <children>
                                        <Label styleClass="card-title" text="Expense" />
                                        <Label styleClass="card-amount" text="3,333" />
                                        <HBox spacing="5">
                                            <Label styleClass="negative-change" text="↓" />
                                            <Label styleClass="negative-change" text="0.8%" />
                                        </HBox>
                                    </children>
                                </VBox>
                            </HBox>
                            <PieChart fx:id="expenseDistributionChart" layoutX="281.0" layoutY="179.0" prefHeight="146.0" prefWidth="222.0" />
                     <Button layoutX="28.0" layoutY="21.0" mnemonicParsing="false" text="Use AI forecast and report function" onAction="#useAI"/>
                     <TextArea fx:id="myTextArea" layoutX="21.0" layoutY="184.0" prefHeight="140.0" prefWidth="452.0" />

                        </children>
                    </AnchorPane>
                </items>
            </SplitPane>
        </SplitPane>


    </right>
</BorderPane>
