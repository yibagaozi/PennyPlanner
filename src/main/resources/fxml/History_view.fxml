<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane styleClass="border-pane-no-gap" stylesheets="@/css/style-History.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.softeng.group77.pennyplanner.controller.HistoryController">
    <left>
        <VBox prefWidth="161.0" styleClass="nav-bar" BorderPane.alignment="TOP_LEFT">
            <Label styleClass="nav-title" text="PennyPlanner" />
            <Button onAction="#turntoHome" styleClass="nav-button" text="Home" />
            <Button onAction="#turntoReport" styleClass="nav-button" text="Report &amp; Forecast" />
            <Button style="-fx-font-weight: bold;" styleClass="nav-button" text="Track Spend!" />
            <Button onAction="#turntoHistory" styleClass="nav-button" text="History" />
            <Button onAction="#turntoManagement" styleClass="nav-button" text="Management" />
            <Button onAction="#turntoUser" styleClass="nav-button" text="User Profile" />
        </VBox>
    </left>
    <right>
        <SplitPane orientation="VERTICAL" styleClass="right-split">
            <SplitPane fx:id="splitPane" dividerPositions="0.1" layoutX="179.0" layoutY="1.0" orientation="VERTICAL" prefHeight="500.0" prefWidth="418.0">
                <items>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                        <children>
                            <Button layoutX="450.0" layoutY="7.0" mnemonicParsing="false" onAction="#turntoLogin" text="Log out" />
                            <Label layoutX="14.0" layoutY="11.0" style="-fx-font-weight: bold;" text="History">
                        <font>
                           <Font size="17.0" />
                        </font></Label>
                        </children>
                    </AnchorPane>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="353.0" prefWidth="505.0">
                        <children>
                            <Label fx:id="date" layoutX="12.0" prefHeight="37.0" prefWidth="103.0" style="-fx-font-weight: bold;" text="April 2025">
                        <font>
                           <Font size="15.0" />
                        </font></Label>
                            <!-- 卡片容器HBox -->
                            <HBox layoutX="56.0" layoutY="56.0" prefHeight="100.0" prefWidth="481.0" spacing="20.0">
                                <!-- 卡片1: 总余额 -->
                                <VBox prefWidth="150.0" styleClass="card">
                                    <children>
                                        <Label styleClass="card-title" text="Total Balance" />
                                        <Label styleClass="card-amount" text="12,345" />
                                        <HBox spacing="5">
                                            <Label styleClass="positive-change" text="↑" />
                                            <Label styleClass="positive-change" text="2.5%" />
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- 卡片2: 收入 -->
                                <VBox prefWidth="150.0" styleClass="card">
                                    <children>
                                        <Label styleClass="card-title" text="Income" />
                                        <Label styleClass="card-amount" text="5,678" />
                                        <HBox spacing="5">
                                            <Label styleClass="positive-change" text="↑" />
                                            <Label styleClass="positive-change" text="1.8%" />
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- 卡片3: 支出 -->
                                <VBox prefWidth="150.0" styleClass="card">
                                    <children>
                                        <Label styleClass="card-title" text="Expense" />
                                        <Label styleClass="card-amount" text="3,333" />
                                        <HBox spacing="5">
                                            <Label styleClass="negative-change" text="↓" />
                                            <Label styleClass="negative-change" text="0.8%" />
                                        </HBox>
                                    </children>
                                </VBox>
                            </HBox>
                     <ComboBox fx:id="Year" layoutX="14.0" layoutY="166.0" onAction="#initialize" prefHeight="23.0" prefWidth="105.0" />
                     <ComboBox fx:id="Month" layoutX="135.0" layoutY="166.0" prefHeight="23.0" prefWidth="98.0" />
                     <Button layoutX="377.0" layoutY="166.0" mnemonicParsing="false" onAction="#turntoManagement" prefHeight="23.0" prefWidth="80.0" text="Add items" />
                     <Button layoutX="477.0" layoutY="166.0" mnemonicParsing="false" onAction="#refreshData" prefHeight="23.0" prefWidth="80.0" text="Refresh" />
                     <TableView fx:id="transactionTable" layoutX="11.0" layoutY="196.0" prefHeight="217.0" prefWidth="572.0">
                       <columns>
                           <TableColumn fx:id="transactionidColumn" prefWidth="50" text="No." />
                           <TableColumn fx:id="dateColumn" prefWidth="100.00001525878906" text="Date" />
                           <TableColumn fx:id="descriptionColumn" prefWidth="109.99993896484375" text="Description" />
                           <TableColumn fx:id="amountColumn" prefWidth="105.3333740234375" text="Amount" />
                           <TableColumn fx:id="categoryColumn" prefWidth="97.33334350585938" text="Category" />
                           <TableColumn fx:id="methodColumn" prefWidth="118.6666259765625" text="Method" />
                       </columns>
                        <columnResizePolicy>
                           <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                     </TableView>
                     <ComboBox fx:id="category" layoutX="247.0" layoutY="166.0" prefHeight="23.0" prefWidth="107.0" />
                            <HBox layoutX="11.0" layoutY="420.0" spacing="10.0">
                                <Button fx:id="editButton" onAction="#handleEdit" prefHeight="9.0" prefWidth="61.0" text="Edit" />
                                <Button fx:id="deleteButton" onAction="#handleDelete" prefHeight="9.0" prefWidth="62.0" text="Delete" />
                            </HBox>

                        </children>
                    </AnchorPane>
                </items>
            </SplitPane>
        </SplitPane>


    </right>
</BorderPane>
