<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" stylesheets="@/css/login.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.softeng.group77.pennyplanner.controller.SignupController">



    <Label styleClass="title" text="PennyPlanner" />
    <Label styleClass="subtitle" text="Create an account" />
    <Label styleClass="hint-text" text="Enter your email to sign up for this app" />

    <VBox spacing="10" styleClass="input-container">
        <TextField fx:id="usernameField" promptText="UserName" styleClass="text-field" />
        <TextField fx:id="emailField" promptText="Email" styleClass="text-field" />
        <TextField fx:id="phoneField" promptText="Phone Number" styleClass="text-field" />
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-field" />
    </VBox>

    <Button fx:id="signUpButton" onAction="#handleSignUp" style="-fx-background-color: linear-gradient(to right, #4b6cb7, #718cb7); -fx-text-fill: white; -fx-font-weight: bold;" styleClass="primary-button" text="Sign up" />
    <Label fx:id="errorLabel" text="" />

    <HBox alignment="CENTER" spacing="5">
        <Label styleClass="hint-text" text="or continue with" />
    </HBox>
    <Button fx:id="LoginButton" onAction="#turntoLogin" style="-fx-background-color: linear-gradient(to right, #4b6cb7, #718cb7); -fx-text-fill: white; -fx-font-weight: bold;" styleClass="primary-button" text="Registered. Switch to login" />


    <Label styleClass="footer-text" text="By clicking buttons to continue, you agree to our Terms of Service and Privacy Policy" wrapText="true" />
</VBox>
